// Main is at line 476.


 /**************************************
   Title: World_Zero_LvL_PerCharacter

   Return Type: Void

   Description: The amount of xp required 
   to advance to the next Level.

 **************************************/


#include <stdio.h>
#include <windows.h>

void  World_Zero_LvL_PerCharacter() //Program Displaying XP per Character LVL
{
	int level, i, xp, perLVL, lvl, _1_Return; //Declaring Variables
	xp = 70;
	perLVL = 60;

	for (i = 2; i >= 0 && i < 101; i++) // Loop & Calculations
	{
		level = i; // Current lvl
		xp += (perLVL + 60); // Max xp at any given Lvl
		perLVL += 60;        // How much xp is added per Lvl

		// Printing LvL
		printf(" LVL %d - Max xp: %d to get to next lvl, and %d xp added.\n\n", i, xp, perLVL);
	}

	printf("\n\n Press 0 to return to Menu. ");
	scanf_s("%d", &_1_Return);
	if (_1_Return == 0)
	{
		int main(void);
	}
}


/**************************************
  Title: World_Zero_WorldXP

  Return Type: Void

  Description: Displays Total XP
  per any given Level, XP Per Enemy,
