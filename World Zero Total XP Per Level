					int W4_LvL55_Total_EnemyXP = (W4_LvL55_EnemyXP * W4_LvL55_Number_Of_Enemies);
					int W4_LvL55_Total_XP = (W4_LvL55_Total_EnemyXP + W4_LvL55_BossXP);
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 14); // Setting color to Yellow (14)
					printf("\n  lvl 55 ");
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);// Setting color to White (15)
					printf("\n Amount of enemies: ");
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 14); printf("%d", W4_LvL55_Number_Of_Enemies);
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15); printf(", Xp per enemy: ");
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 14); printf("%d", W4_LvL55_EnemyXP);
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15); printf(", Total Xp: ");
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 14); printf("%dxp + Boss = %dxp \n\n", W4_LvL55_Total_EnemyXP, W4_LvL55_Total_XP);
					SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);
				}

				if (lvl[0] == 0)
				{
					break;
				}
			}
	
		}
		if ( World[0] ==_2_Return)
		{
			break;
		}

	}
}



int main(void) //Main
{
	while (1)
	{
		int Menu_Number[3];
		printf("\n Choose an Option: \n");
		printf(" 1. Character Xp \n 2. World / Level XP \n Option: ");
		scanf_s("%d", &Menu_Number[0]);

		switch (Menu_Number[0])
		{
		case 1: (Menu_Number[1] = Menu_Number[0]); break;
		case 2: (Menu_Number[2] = Menu_Number[0]); break;
		}

		if (Menu_Number[1] == Menu_Number[0]) // Program 1
		{
			World_Zero_LvL_PerCharacter();
		}

		else if (Menu_Number[2] = Menu_Number[0]) // Program 2
		{
			 World_Zero_WorldXP();
		}


	}
}
